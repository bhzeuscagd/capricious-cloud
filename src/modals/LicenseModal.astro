---
// components/modals/LicenseModal.astro
// Modal de Licencia MIT

import { mitLicenseData, formatSectionContent } from "../data/footer";

const githubRepoUrl = "https://github.com/tu-usuario/tu-repo"; // ⚠️ Cambia esto
---

<div id="modal-license" class="legal-modal" aria-hidden="true">
    <div class="modal-overlay"></div>
    <div class="modal-content" role="dialog" aria-labelledby="license-title">
        <button class="modal-close" aria-label="Cerrar modal">×</button>

        <div class="modal-header">
            <span class="modal-badge">{mitLicenseData.badge}</span>
            <h2 id="license-title" class="modal-title">
                {mitLicenseData.title}
            </h2>
        </div>

        <div class="modal-body">
            <p class="modal-intro">{mitLicenseData.lastUpdate}</p>

            {
                mitLicenseData.sections.map((section, index) => (
                    <section class="modal-section">
                        <h3>{section.title}</h3>
                        {formatSectionContent(section.content).map(
                            (paragraph) => {
                                // Si es la sección de limitación de responsabilidad (en mayúsculas)
                                if (
                                    paragraph === paragraph.toUpperCase() &&
                                    paragraph.length > 100
                                ) {
                                    return (
                                        <p class="license-disclaimer">
                                            {paragraph}
                                        </p>
                                    );
                                }
                                return <p class="license-text">{paragraph}</p>;
                            },
                        )}

                        {/* Agregar link a GitHub en la última sección */}
                        {index === mitLicenseData.sections.length - 1 && (
                            <a
                                href={githubRepoUrl}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="license-link"
                            >
                                Ver Repositorio en GitHub →
                            </a>
                        )}
                    </section>
                ))
            }
        </div>
    </div>
</div>

<style>
    .legal-modal {
        position: fixed;
        inset: 0;
        z-index: 10000;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s ease;
    }

    .legal-modal.active {
        opacity: 1;
        pointer-events: all;
    }

    .modal-overlay {
        position: absolute;
        inset: 0;
        background: rgba(18, 18, 18, 0.9);
        backdrop-filter: blur(4px);
    }

    .modal-content {
        position: relative;
        max-width: 800px;
        width: 90%;
        max-height: 85vh;
        overflow-y: auto;
        background: var(--color-paper);
        border: 2px solid var(--color-ink);
        transform: scale(0.9);
        transition: transform 0.3s ease;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    }

    .legal-modal.active .modal-content {
        transform: scale(1);
    }

    .modal-close {
        position: absolute;
        inset: 1rem 1rem auto auto;
        width: 2.5rem;
        height: 2.5rem;
        border: 1px solid var(--color-ink);
        background: var(--color-white);
        font-size: 1.5rem;
        line-height: 1;
        cursor: pointer;
        transition: all 0.3s ease;
        font-family: var(--font-serif);
        z-index: 10;
    }

    .modal-close:hover {
        background: var(--color-red);
        color: var(--color-white);
        border-color: var(--color-red);
        transform: rotate(90deg);
    }

    .modal-header {
        padding: 3rem 2rem 2rem;
        border-bottom: 1px solid var(--color-ink);
        background: var(--color-white);
    }

    .modal-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        font-family: var(--font-mono);
        font-size: 0.65rem;
        background-color: var(--color-ink);
        color: var(--color-paper);
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
    }

    .modal-title {
        font-family: var(--font-serif);
        font-size: clamp(2rem, 4vw, 3rem);
        line-height: 1;
        margin: 0;
        color: var(--color-ink);
    }

    .modal-body {
        padding: 2rem;
    }

    .modal-intro {
        font-family: var(--font-mono);
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--color-red);
        margin-bottom: 2rem;
    }

    .modal-section {
        margin-bottom: 2rem;
    }

    .modal-section h3 {
        font-family: var(--font-serif);
        font-size: 1.25rem;
        margin-bottom: 0.75rem;
        color: var(--color-ink);
    }

    .license-text {
        font-family: var(--font-mono);
        font-size: 0.85rem;
        line-height: 1.8;
        color: rgba(18, 18, 18, 0.8);
        margin-bottom: 0.5rem;
    }

    .license-disclaimer {
        font-family: var(--font-mono);
        font-size: 0.75rem;
        line-height: 1.8;
        text-transform: uppercase;
        opacity: 0.9;
        background: rgba(255, 0, 0, 0.05);
        padding: 1rem;
        border-left: 3px solid var(--color-red);
        margin: 1rem 0;
    }

    .license-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        margin-top: 1rem;
        background: var(--color-ink);
        color: var(--color-paper);
        text-decoration: none;
        font-family: var(--font-mono);
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        transition: all 0.3s ease;
    }

    .license-link:hover {
        background: var(--color-red);
    }

    @media (max-width: 767px) {
        .modal-header {
            padding: 2rem 1.5rem 1.5rem;
        }

        .modal-body {
            padding: 1.5rem;
        }

        .modal-title {
            font-size: 2rem;
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .modal-close,
        .legal-modal,
        .modal-content,
        .license-link {
            transition: none;
        }
    }
</style>
