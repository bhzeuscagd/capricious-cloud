---
// components/modals/PrivacyModal.astro
// Modal de Política de Privacidad

import { privacyPolicyData, formatSectionContent } from "../data/footer";
---

<div id="modal-privacy" class="legal-modal" aria-hidden="true">
    <div class="modal-overlay"></div>
    <div class="modal-content" role="dialog" aria-labelledby="privacy-title">
        <button class="modal-close" aria-label="Cerrar modal">×</button>

        <div class="modal-header">
            <span class="modal-badge">{privacyPolicyData.badge}</span>
            <h2 id="privacy-title" class="modal-title">
                {privacyPolicyData.title}
            </h2>
        </div>

        <div class="modal-body">
            <p class="modal-intro">
                Última actualización: {privacyPolicyData.lastUpdate}
            </p>

            {
                privacyPolicyData.sections.map((section) => (
                    <section class="modal-section">
                        <h3>{section.title}</h3>
                        {formatSectionContent(section.content).map(
                            (paragraph) => {
                                if (paragraph.startsWith("•")) {
                                    return <p class="list-item">{paragraph}</p>;
                                } else if (paragraph.includes("@")) {
                                    const parts =
                                        paragraph.split(/(\S+@\S+\.\S+)/);
                                    return (
                                        <p>
                                            {parts.map((part) => {
                                                if (part.includes("@")) {
                                                    return (
                                                        <a
                                                            href={`mailto:${part}`}
                                                        >
                                                            {part}
                                                        </a>
                                                    );
                                                }
                                                return part;
                                            })}
                                        </p>
                                    );
                                } else {
                                    return <p>{paragraph}</p>;
                                }
                            },
                        )}
                    </section>
                ))
            }
        </div>
    </div>
</div>

<style>
    .legal-modal {
        position: fixed;
        inset: 0;
        z-index: 10000;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s ease;
    }

    .legal-modal.active {
        opacity: 1;
        pointer-events: all;
    }

    .modal-overlay {
        position: absolute;
        inset: 0;
        background: rgba(18, 18, 18, 0.9);
        backdrop-filter: blur(4px);
    }

    .modal-content {
        position: relative;
        max-width: 800px;
        width: 90%;
        max-height: 85vh;
        overflow-y: auto;
        background: var(--color-paper);
        border: 2px solid var(--color-ink);
        transform: scale(0.9);
        transition: transform 0.3s ease;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    }

    .legal-modal.active .modal-content {
        transform: scale(1);
    }

    .modal-close {
        position: absolute;
        inset: 1rem 1rem auto auto;
        width: 2.5rem;
        height: 2.5rem;
        border: 1px solid var(--color-ink);
        background: var(--color-white);
        font-size: 1.5rem;
        line-height: 1;
        cursor: pointer;
        transition: all 0.3s ease;
        font-family: var(--font-serif);
        z-index: 10;
    }

    .modal-close:hover {
        background: var(--color-red);
        color: var(--color-white);
        border-color: var(--color-red);
        transform: rotate(90deg);
    }

    .modal-header {
        padding: 3rem 2rem 2rem;
        border-bottom: 1px solid var(--color-ink);
        background: var(--color-white);
    }

    .modal-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        font-family: var(--font-mono);
        font-size: 0.65rem;
        background-color: var(--color-ink);
        color: var(--color-paper);
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
    }

    .modal-title {
        font-family: var(--font-serif);
        font-size: clamp(2rem, 4vw, 3rem);
        line-height: 1;
        margin: 0;
        color: var(--color-ink);
    }

    .modal-body {
        padding: 2rem;
    }

    .modal-intro {
        font-family: var(--font-mono);
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--color-red);
        margin-bottom: 2rem;
    }

    .modal-section {
        margin-bottom: 2rem;
    }

    .modal-section h3 {
        font-family: var(--font-serif);
        font-size: 1.25rem;
        margin-bottom: 0.75rem;
        color: var(--color-ink);
    }

    .modal-section p {
        font-family: var(--font-sans);
        font-size: 0.95rem;
        line-height: 1.7;
        color: rgba(18, 18, 18, 0.8);
        margin-bottom: 0.5rem;
    }

    .list-item {
        padding-left: 1rem;
    }

    .modal-section a {
        color: var(--color-red);
        text-decoration: underline;
        text-decoration-color: var(--color-red);
        text-underline-offset: 2px;
    }

    @media (max-width: 767px) {
        .modal-header {
            padding: 2rem 1.5rem 1.5rem;
        }

        .modal-body {
            padding: 1.5rem;
        }

        .modal-title {
            font-size: 2rem;
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .modal-close,
        .legal-modal,
        .modal-content {
            transition: none;
        }
    }
</style>
