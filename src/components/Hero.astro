<section id="home" class="hero border-b" aria-label="Hero section">
    <div class="hero-line" aria-hidden="true"></div>

    <div class="title-container">
        <div class="title">
            <h1 aria-label="Artist and Designer">
                Art <span class="caida" aria-hidden="true">i</span> st
                <span class="ampersand" aria-hidden="true">&</span>
                Des <span class="caida" aria-hidden="true">i</span> gner
            </h1>
        </div>

        <div class="hero-subtitle">
            <p class="intersection-tag" aria-label="Welcome to my Portfolio">
                Welcome to my Portfolio
            </p>
        </div>
    </div>

    <nav class="scroll-indicator" aria-label="Page navigation hints">
        <div class="hidden-mobile" aria-hidden="true">Fig. 01 — Hero Cover</div>
        <div class="text-red bounce" role="status" aria-live="polite">
            ↓ Scroll to Explore
        </div>
        <div class="hidden-mobile" aria-hidden="true">Vol. 25</div>
    </nav>
</section>

<style>
    /* ============================================
       HERO SECTION - Main Container
       ============================================ */
    .hero {
        min-height: 80dvh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

    /* Vertical divider line */
    .hero-line {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 1px;
        height: 100%;
        background-color: rgba(18, 18, 18, 0.1);
        pointer-events: none;
    }

    /* ============================================
       TYPOGRAPHY - Animated Hero Title
       ============================================ */
    .title h1 {
        font-family: var(--font-title);
        font-size: clamp(2rem, 35vw, 12rem);
        text-transform: uppercase;
        color: var(--color-red);
        width: 100%;
        height: 100%;
        letter-spacing: -0.1em;
        transform: scaleX(1) scaleY(1.5);
        transform-origin: center;
        display: flex;
        justify-content: center;
        align-items: center;
        white-space: nowrap;
    }

    /* Ampersand character styling with italic animation */
    .ampersand {
        color: var(--color-ink);
        font-style: normal;
        margin: 0 3vw;
        display: inline-block;
        animation: become-italic 1.2s ease-out forwards;
    }

    @keyframes become-italic {
        from {
            transform: skewX(0deg);
        }
        to {
            transform: skewX(-15deg);
        }
    }

    /* ============================================
       ANIMATIONS - Letter Drop Effect
       ============================================ */
    .caida {
        display: inline-block;
        opacity: 0;
        color: var(--color-ink);
        animation: caida 1.2s ease-in-out forwards;
    }

    /* Stagger second letter drop */
    .caida:nth-of-type(2) {
        animation-delay: 0.3s;
    }

    @keyframes caida {
        0% {
            opacity: 0;
            transform: translateY(-150vh);
        }
        70% {
            opacity: 1;
            transform: translateY(0) scaleY(1.3);
        }
        85% {
            opacity: 1;
            transform: translateY(-15px) scaleY(1.3);
        }
        100% {
            opacity: 1;
            transform: translateY(0) scaleY(1.3);
        }
    }

    /* ============================================
       SUBTITLE - Welcome Tag
       ============================================ */
    .hero-subtitle {
        margin-top: 4rem;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        position: relative;
        z-index: 20;
    }

    .intersection-tag {
        font-family: var(--font-mono);
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: rgba(18, 18, 18, 0.7);
        background-color: var(--color-paper);
        padding: 0.45rem 3rem;
        border: 1px solid rgba(18, 18, 18, 0.2);
        display: inline-block;
        backface-visibility: hidden;
        animation: stamp-entrance 1.2s cubic-bezier(0.2, 0.6, 0.35, 1) forwards;
    }

    @keyframes stamp-entrance {
        0% {
            opacity: 0;
            transform: scale(4) rotate(15deg);
            filter: blur(10px);
        }
        20% {
            opacity: 1;
            transform: scale(1) rotate(-5deg);
            filter: blur(0);
        }
        40% {
            transform: scale(0.95) rotate(-5deg);
        }
        60% {
            transform: scale(1.02) rotate(-5deg);
        }
        75% {
            transform: scale(1) rotate(-5deg);
        }
        100% {
            transform: scale(1) rotate(-15deg);
        }
    }

    /* ============================================
       SCROLL INDICATOR - Bottom Navigation Hint
       ============================================ */
    .scroll-indicator {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        padding: 1rem;
        font-family: var(--font-mono);
        font-size: 0.625rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .bounce {
        animation: bounce 2s infinite;
    }

    @keyframes bounce {
        0%,
        20%,
        50%,
        80%,
        100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-10px);
        }
        60% {
            transform: translateY(-5px);
        }
    }

    /* ============================================
       RESPONSIVE DESIGN - Mobile Optimizations
       ============================================ */
    @media (max-width: 768px) {
        .hero {
            min-height: 80dvh;
        }

        .title h1 {
            font-size: 23vw;
            transform: scaleX(1) scaleY(1.2);
            line-height: 0;
            white-space: normal;
            gap: 0;
        }

        .ampersand {
            font-size: 0.6em;
            margin: 0 2vh;
        }

        .intersection-tag {
            font-size: 0.8rem !important;
        }
    }

    /* Desktop-only elements */
    .hidden-mobile {
        display: none;
    }

    @media (min-width: 768px) {
        .hidden-mobile {
            display: block;
        }
    }
</style>
