---
// components/WorkSection.astro
// Componente de galería de proyectos adaptado para GitHub

interface Props {
  class?: string;
}

const { class: className } = Astro.props;

import { projects } from '../data/projects';

const sidebarContent = {
  title: 'Proyectos',
  subtitle: 'Destacados',
  description: 'Colección de proyectos web enfocados en optimizar velocidad y experiencia de usuario. Código limpio, escalable y con las mejores prácticas.',
  status: {
    label: '/// Estado',
    text: 'Disponible para nuevos proyectos'
  }
};

const archiveCard = {
  figure: 'GITHUB',
  title: 'Ver Todos\nlos Proyectos',
  subtitle: 'Visitar perfil de GitHub',
  link: 'https://github.com/bhzeuscagd'
};
---

<section 
  id="work" 
  class:list={['work-section', 'container', 'border-b', className]}
  aria-labelledby="work-title"
>
  <div class="work-grid">
    
    <!-- SIDEBAR -->
    <aside class="sidebar border-r border-b" aria-label="Información de proyectos">
      <div class="deco-square deco-tl" aria-hidden="true"></div>
      <div class="deco-square deco-br" aria-hidden="true"></div>

      <div>
        <h2 id="work-title" class="section-title mb-6">
          {sidebarContent.title} <br />
          <span class="text-red italic">{sidebarContent.subtitle}</span>
        </h2>
        <p class="description">
          {sidebarContent.description}
        </p>
      </div>

      <div class="status-box">
        <p class="status-label">{sidebarContent.status.label}</p>
        <p class="status-text">{sidebarContent.status.text}</p>
      </div>
    </aside>

    <!-- PROJECT CARDS -->
    {projects.map((project) => (
      <article 
        class="project-card"
        aria-labelledby={`project-${project.id}-title`}
      >
        <span class={`project-tag ${project.tagStyle}`} aria-hidden="true">
          {project.figure}
        </span>

        <div class="project-img-container">
          <img
            src={project.image}
            alt={project.alt}
            class="project-img"
            loading="lazy"
          />

          <!-- Overlay con info y links -->
          <div class="project-overlay">
            <div class="overlay-header">
              <h3 id={`project-${project.id}-title`} class="project-title">
                {project.title}
              </h3>
              <time class="project-year" datetime={project.year}>
                [{project.year}]
              </time>
            </div>
            
            <p class="project-desc">{project.description}</p>
            
            <!-- Tech Stack -->
            <div class="tech-stack">
              {project.stack.map((tech) => (
                <span class="tech-tag">{tech}</span>
              ))}
            </div>

            <!-- Action buttons -->
            <div class="project-actions">
              <a 
                href={project.demoUrl} 
                class="project-link primary"
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`Ver demo en vivo de ${project.title}`}
              >
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                  <polyline points="15 3 21 3 21 9"/>
                  <line x1="10" y1="14" x2="21" y2="3"/>
                </svg>
                Ver Demo
              </a>
              
              <a 
                href={project.githubUrl} 
                class="project-link secondary"
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`Ver código fuente de ${project.title} en GitHub`}
              >
                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                Ver Código
              </a>
            </div>
          </div>
        </div>
      </article>
    ))}

    <!-- ARCHIVE CARD - Link a GitHub -->
    <a 
      href={archiveCard.link} 
      class="archive-card"
      target="_blank"
      rel="noopener noreferrer"
      aria-label={archiveCard.subtitle}
    >
      <span class="project-tag tag-paper" aria-hidden="true">
        {archiveCard.figure}
      </span>
      <h3 class="archive-title">
        {archiveCard.title.split('\n').map((line, i) => (
          <Fragment>
            {line}
            {i === 0 && <br />}
          </Fragment>
        ))}
      </h3>
      <p class="archive-subtitle">{archiveCard.subtitle}</p>
      <div class="arrow-circle" aria-hidden="true">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </div>
    </a>

  </div>
</section>

<style>
  /* Estructura base - sin cambios */
  .work-section {
    width: 100%;
  }

  .border-b {
    border-bottom: var(--border-width) solid var(--color-ink);
  }

  .border-r {
    border-right: var(--border-width) solid var(--color-ink);
  }

  .work-grid {
    display: grid;
    grid-template-columns: 1fr;
  }

  @media (min-width: 1024px) {
    .work-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  /* Sidebar - sin cambios */
  .sidebar {
    padding: 2rem;
    background-color: var(--color-white);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
    gap: 2rem;
    min-height: 400px;
  }

  @media (min-width: 768px) {
    .sidebar {
      padding: 4rem;
    }
  }

  @media (max-width: 1023px) {
    .sidebar {
      border-right: none;
    }
  }

  .section-title {
    font-family: var(--font-serif);
    font-size: clamp(2.5rem, 6vw, 4rem);
    line-height: 1;
    font-weight: 400;
  }

  .mb-6 {
    margin-bottom: 1.5rem;
  }

  .text-red {
    color: var(--color-red);
  }

  .italic {
    font-style: italic;
  }

  .deco-square {
    position: absolute;
    width: 1rem;
    height: 1rem;
    pointer-events: none;
  }

  .deco-tl {
    inset: 1rem auto auto 1rem;
    border: 1px solid var(--color-ink);
  }

  .deco-br {
    inset: auto 1rem 1rem auto;
    background-color: var(--color-ink);
  }

  .description {
    font-family: var(--font-sans);
    color: rgba(18, 18, 18, 0.7);
    line-height: 1.6;
    text-align: justify;
    font-size: clamp(0.875rem, 1.5vw, 1rem);
  }

  .status-box {
    margin-block-start: auto;
  }

  .status-label {
    font-family: var(--font-mono);
    color: var(--color-red);
    text-transform: uppercase;
    font-size: 0.75rem;
    margin-bottom: 0.5rem;
    letter-spacing: 0.05em;
  }

  .status-text {
    font-family: var(--font-serif);
    font-size: clamp(1.25rem, 2.5vw, 1.5rem);
  }

  /* Project card */
  .project-card {
    position: relative;
    border-bottom: var(--border-width) solid var(--color-ink);
    overflow: hidden;
    background-color: var(--color-paper);
  }

  .project-card:last-of-type {
    border-bottom: none;
  }

  @media (min-width: 1024px) {
    .project-card {
      border-bottom: none;
      border-right: var(--border-width) solid var(--color-ink);
    }

    .project-card:last-of-type {
      border-right: var(--border-width) solid var(--color-ink);
    }
  }

  .project-tag {
    position: absolute;
    inset: 0 auto auto 0;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    padding: 0.25rem 0.75rem;
    z-index: 20;
    border-right: var(--border-width) solid var(--color-ink);
    border-bottom: var(--border-width) solid var(--color-ink);
    letter-spacing: 0.05em;
  }

  .tag-red {
    background-color: var(--color-red);
    color: var(--color-white);
  }

  .tag-black {
    background-color: var(--color-ink);
    color: var(--color-white);
  }

  .tag-paper {
    background-color: var(--color-paper);
    color: var(--color-ink);
  }

  .project-img-container {
    height: 500px;
    position: relative;
    overflow: hidden;
  }

  .project-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(100%);
    transition: filter 0.7s ease, transform 0.7s ease;
  }

  .project-card:hover .project-img {
    filter: grayscale(0%);
    transform: scale(1.05);
  }

  /* Project overlay - ACTUALIZADO */
  .project-overlay {
    position: absolute;
    inset: auto 0 0 0;
    width: 100%;
    background-color: rgba(235, 233, 228, 0.98);
    border-top: var(--border-width) solid var(--color-ink);
    padding: 1.5rem;
    backdrop-filter: blur(8px);
    transform: translateY(100%);
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .project-card:hover .project-overlay {
    transform: translateY(0);
  }

  .overlay-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 0.5rem;
    gap: 1rem;
  }

  .project-title {
    font-family: var(--font-serif);
    font-size: clamp(1.5rem, 2.5vw, 1.8rem);
    font-weight: 400;
    margin: 0;
  }

  .project-year {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    flex-shrink: 0;
  }

  .project-desc {
    font-family: var(--font-sans);
    font-size: 0.875rem;
    color: rgba(18, 18, 18, 0.7);
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  /* Tech Stack - NUEVO */
  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tech-tag {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    padding: 0.25rem 0.5rem;
    background-color: var(--color-ink);
    color: var(--color-white);
    border-radius: 2px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Project Actions - NUEVO */
  .project-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .project-link {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.5rem 1rem;
    border: var(--border-width) solid var(--color-ink);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
  }

  .project-link.primary {
    background-color: var(--color-red);
    color: var(--color-white);
    border-color: var(--color-red);
  }

  .project-link.primary:hover {
    background-color: var(--color-ink);
    border-color: var(--color-ink);
    transform: translateY(-2px);
  }

  .project-link.secondary {
    background-color: transparent;
    color: var(--color-ink);
  }

  .project-link.secondary:hover {
    background-color: var(--color-ink);
    color: var(--color-white);
  }

  /* Archive card */
  .archive-card {
    padding: 4rem 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    background-color: var(--color-ink);
    color: var(--color-paper);
    cursor: pointer;
    transition: background-color 0.5s ease;
    position: relative;
    text-decoration: none;
    min-height: 400px;
  }

  .archive-card:hover {
    background-color: var(--color-red);
  }

  .archive-title {
    font-family: var(--font-serif);
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    margin-bottom: 1rem;
    line-height: 1;
    font-weight: 400;
    margin: 0 0 1rem 0;
  }

  .archive-subtitle {
    font-family: var(--font-mono);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 0.75rem;
    opacity: 0.7;
    margin-bottom: 2rem;
  }

  .arrow-circle {
    width: 4rem;
    height: 4rem;
    border-radius: 50%;
    border: 1px solid var(--color-paper);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .arrow-circle svg {
    width: 2rem;
    height: 2rem;
  }

  .archive-card:hover .arrow-circle {
    background-color: var(--color-paper);
    transform: scale(1.1);
  }

  .archive-card:hover .arrow-circle svg {
    color: var(--color-red);
  }

  /* Accessibility */
  .project-card:focus-within,
  .archive-card:focus-visible {
    outline: 2px solid var(--color-red);
    outline-offset: -2px;
  }

  @media (prefers-reduced-motion: reduce) {
    .project-img,
    .project-overlay,
    .archive-card,
    .arrow-circle,
    .project-link {
      transition: none;
    }
  }

  /* Mobile adjustments */
  @media (max-width: 767px) {
    .project-img-container {
      height: 350px;
    }

    .archive-card {
      padding: 3rem 1.5rem;
    }

    .project-actions {
      flex-direction: column;
    }

    .project-link {
      width: 100%;
      justify-content: center;
    }
  }
</style>